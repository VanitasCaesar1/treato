{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    },
    // Disable type checking and linting
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "strictBindCallApply": false,
    "strictPropertyInitialization": false,
    "noImplicitOverride": false,
    "exactOptionalPropertyTypes": false,
    "noUncheckedIndexedAccess": false
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.js",
    "**/*.jsx",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "components/auth/HospitalCreationForm.jsx",
    "lib/mongodb.js",
    "app/dashboard/layout.jsx",
    "app/api/user/profile/picture/[userId]/route.js",
    "app/api/hospital/[id]/route.js",
    "app/api/hospital/[id]/picture/route.js",
    "app/api/hospital/[id]/picture/[filename]/route.js",
    "app/api/hospital/[id]/appointments/route.js",
    "app/api/doctors/schedules/[id]/route.ts",
    "app/api/doctors/fees/[id]/route.js",
    "app/api/doctors/[id]/fees/route.js",
    "app/api/doctors/[id]/schedules/route.ts",
    "app/api/appointments/[id]/route.js",
    "app/api/patients/search/route.js",
    "app/payment-failed/page.jsx",
    "app/dashboard/diagnosis/[id]/page.jsx",
    "app/api/doctors/[id]/shifts/route.js",
    "app/api/doctors/[id]/availability/route.js",
    "components/diagnosis/MedicalHistory.jsx",
    "app/dashboard/diagnosis/new/page.jsx",
    "app/dashboard/diagnosis/new/page.jsx",
    "components/SettingsPage.jsx"
  ],
  "exclude": ["node_modules"]
}